<VirtualHost *:80>
  ServerAlias <%= scope.lookupvar('::fqdn') %>
  DocumentRoot <%= scope.lookupvar('apache::params::document_root') %>
  <Directory "<%= scope.lookupvar('apache::params::document_root') %>">
    Order deny,allow
    Allow from all
  </Directory>

  # Logjammin'
  LogLevel warn
  ErrorLog <%= scope.lookupvar('apache::params::logs') %>/apt_error.log
  CustomLog <%= scope.lookupvar('apache::params::logs') %>/apt_access.log combined
</VirtualHost>
